<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeniorProjectHealthApplication.Views.BrowseRecipePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource UMCMaroon}">
            <ScrollView>
                <!--Food Name and Image-->
                <StackLayout Margin="0,0,0,50">
                    <Grid>
                        <CollectionView ItemsSource="{Binding RecipesList}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="3"  BackgroundColor="{StaticResource UMCMaroon}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackLayout Grid.Row="0" Grid.ColumnSpan="4" BackgroundColor="{StaticResource UMCGold}" >
                                                <Label Text="{Binding ReceipeName}">
                                                </Label>
                                                <Image Source="{Binding RecipePicture}" />
                                            </StackLayout>

                                            <!--Nutritional Facts-->
                                            <Label Grid.Row="1" Grid.ColumnSpan="4" HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" Margin="0,50,0,0" FontSize="32" TextColor="White"
                               FontAttributes="Bold">
                                                Nutritional Facts
                                            </Label>
                                            <StackLayout Grid.Row="2" Grid.Column="0" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Calories" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Calories}" />
                                            </StackLayout>

                                            <StackLayout Grid.Row="2" Grid.Column="1" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Carbs" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Carbs}" />
                                            </StackLayout>

                                            <StackLayout Grid.Row="2" Grid.Column="2" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Protein" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Protein}" />
                                            </StackLayout>

                                            <StackLayout Grid.Row="2" Grid.Column="3" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Fat" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Fat}" />
                                            </StackLayout>


                                            <StackLayout Grid.Row="3" Grid.Column="0" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Saturated Fat" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding SaturatedFat}" />
                                            </StackLayout>

                                            <StackLayout Grid.Row="3" Grid.Column="1" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Sodium" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Sodium}" />
                                            </StackLayout>

                                            <StackLayout Grid.Row="3" Grid.Column="2" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Fiber" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Fiber}" />
                                            </StackLayout>

                                            <StackLayout Grid.Row="3" Grid.Column="3" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 10, 5, 0">
                                                <Label Text="Sugar" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Sugar}" />
                                            </StackLayout>


                                            <!--Ingredients-->
                                            <StackLayout Grid.Row="4" Grid.ColumnSpan="4" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 50, 10, 0">
                                                <Label Text="Ingredients" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Ingredients}" />
                                            </StackLayout>


                                            <!--Instructions-->
                                            <StackLayout Grid.Row="5" Grid.ColumnSpan="4" BackgroundColor="{StaticResource UMCGold}"
                                     Margin="5, 50, 10, 0">
                                                <Label Text="Instructions" />
                                                <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Black"
                                   FontSize="18" Text="{Binding Instructions}" />
                                            </StackLayout>

                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </StackLayout>
            </ScrollView>
            <!--Add Food Button-->
            <StackLayout>
                <Button BackgroundColor="{StaticResource UMCGold}" Text="Add Food" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>